{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "./src/app.js",
  "scripts": {
    "oldstart": "node ./src/server.js",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "cluster": "pm2 start ./src/server.js -i max",
    "mochatest": "mocha -t 7000 --require test/setup.js",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --statements 60 --lines 60 npm run mochatest",
    "dev": "nodemon ./src/server.js",
    "migrate": "postgrator --config postgrator-config.js",
    "migrate:test": "env NODE_ENV=test npm run migrate",
    "migrate:production": "env SSL=true dotenv npm run migrate",
    "predeploy": "npm audit",
    "deploy": "git push heroku master"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^6.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.1",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.0",
    "pg": "^8.0.3",
    "pg-connection-string": "^2.5.0",
    "pm2": "^4.4.0",
    "postgrator-cli": "^3.3.0",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "should": "^13.2.3",
    "supertest": "^4.0.2"
  }
}